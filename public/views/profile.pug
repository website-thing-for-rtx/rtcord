html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Rtcord
        link(rel="stylesheet", href="/css/styles.css")
    body 
        div 
            div.avatar
                img(
                  src=`/avatars/${userId}.jpg` 
                  onerror="this.onerror=null; this.src='/avatars/3.png';" 
                  alt="Avatar" 
                  width="120" 
                  height="120"
                )
                if isModifiableUser
                    form(action=`/api/profile/${userId}/avatar/upload` method="post" enctype="multipart/form-data")
                        input(type="file" name="avatar")
                        button(type="submit") Upload
                    div.bio
                        span.bioText


        script(src="/js/profile.js") 